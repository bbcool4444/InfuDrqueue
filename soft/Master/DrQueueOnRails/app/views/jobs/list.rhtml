if @jobs_db.length > 0
	link_to(image_tag("rss.png", :size => "14x14", :border => 0, :style => "vertical-align:middle;")+" subscribe to RSS feed", {:controller => 'jobs', :action => 'feed', :protocol => "https://", :only_path => false})
end
%> -->

<% end %>
